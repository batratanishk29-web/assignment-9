#include <iostream>
#include <vector>
#include <queue>
using namespace std;

typedef pair<int, int> pii; 
// pair<weight, node>

void primMST(int V, vector<vector<pii>> &adj) {
    vector<int> key(V, INT_MAX);     // Minimum weight to connect
    vector<bool> inMST(V, false);    // Node included in MST?
    vector<int> parent(V, -1);       // To store MST structure

    // Min-heap: stores {key, vertex}
    priority_queue<pii, vector<pii>, greater<pii>> pq;

    // Start from node 0
    key[0] = 0;
    pq.push({0, 0});

    while (!pq.empty()) {
        int u = pq.top().second; 
        pq.pop();

        if (inMST[u]) continue;  // Skip if already taken

        inMST[u] = true;

        // Visit all neighbors of u
        for (auto &edge : adj[u]) {
            int v = edge.second;
            int weight = edge.first;

            // If v not in MST and weight < key[v]
            if (!inMST[v] && weight < key[v]) {
                key[v] = weight;
                parent[v] = u;
                pq.push({key[v], v});
            }
        }
    }

    // Print MST Result
    cout << "\nEdges in Minimum Spanning Tree:\n";
    int totalWeight = 0;
    for (int i = 1; i < V; i++) {
        cout << parent[i] << " -- " << i << "  (weight = " << key[i] << ")\n";
        totalWeight += key[i];
    }

    cout << "\nTotal Weight of MST = " << totalWeight << endl;
}

int main() {
    int V, E;
    cout << "Enter number of vertices: ";
    cin >> V;
    cout << "Enter number of edges: ";
    cin >> E;

    vector<vector<pii>> adj(V);

    cout << "Enter edges in format: u v weight\n";
    for (int i = 0; i < E; i++) {
        int u, v, w;
        cin >> u >> v >> w;
        adj[u].push_back({w, v});
        adj[v].push_back({w, u});   // Undirected graph
    }

    primMST(V, adj);

    return 0;
}
