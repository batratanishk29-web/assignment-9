#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n, m;
    cin >> n >> m;

    //Adjacency List 
    vector<int> adj[n + 1];  

    for(int i = 0; i < m; i++) {
        int u, v;
        cin >> u >> v;

        adj[u].push_back(v);  // edge u â†’ v

        // For undirected graph only:
        adj[v].push_back(u);
    }

    // Print adjacency list
    cout << "\nAdjacency List:\n";
    for(int i = 1; i <= n; i++) {
        cout << i << " -> ";
        for(int x : adj[i]) {
            cout << x << " ";
        }
        cout << "\n";
    }

    return 0;
}
